@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

<div class="container">
    <div style="padding-top: 200px; text-align: center">
        @{
            if (Model == null)
            {
                <h2>Unfortunately, an error has happened. Don't worry our team are looking for it!</h2>
            }
            else
            {
                ViewData["Title"] = Model.Title;
                <h2>@Html.Raw(Model.Message)</h2>
            }
        }
    </div>
</div>